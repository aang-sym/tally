{
  "name": "tally",
  "version": "0.1.0",
  "description": "iOS-first app for smart streaming service management",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:logged": "npm run dev 2>&1 | tee dev.log",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:api:logged": "npm run dev:api 2>&1 | tee api.log",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:web:logged": "npm run dev:web 2>&1 | tee web.log",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@redocly/cli": "^2.0.8",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^5.4.20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
